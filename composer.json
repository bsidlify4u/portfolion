{
    "name": "portfolion/framework",
    "description": "A modern and high-performance PHP framework",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "defuse/php-encryption": "^2.4",
        "doctrine/dbal": "^3.0",
        "filp/whoops": "^2.15",
        "firebase/php-jwt": "^6.0",
        "league/flysystem": "^3.0",
        "monolog/monolog": "^3.4",
        "predis/predis": "^3.0",
        "psr/container": "^2.0",
        "psr/log": "^3.0",
        "symfony/console": "^6.3",
        "symfony/finder": "^6.3",
        "symfony/process": "^6.3",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.3"
    },
    "files": [
        "functions/helpers.php"
    ],
    "autoload": {
        "psr-4": {
            "Portfolion\\": "core/",
            "App\\": "app/"
        },
        "files": [
            "functions/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyse",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "check": [
            "@test",
            "@analyze",
            "@cs"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
